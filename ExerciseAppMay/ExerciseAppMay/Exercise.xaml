    <Grid BackgroundColor="#4388CC">

        <Grid.RowDefinitions>

            <RowDefinition  Height="Auto" />
            <RowDefinition  Height="Auto" />
            <RowDefinition  Height="Auto" />
            <RowDefinition  Height="Auto" />
            <RowDefinition  Height="Auto" />

            <RowDefinition  Height="Auto" />
            <RowDefinition  Height="Auto" />
            <RowDefinition  Height="Auto" />

            <!-- <RowDefinition Height="100" /> -->

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="Auto" />

            <ColumnDefinition Width="*" />

            <!--  <ColumnDefinition Width="100" />  -->

        </Grid.ColumnDefinitions>

        <Label Text="Exercise Buddy!" Rotation="-2" FontSize="Large"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  TextColor="White" BackgroundColor="#4388CC" Margin="10,15,5,5"/>
        <Entry Text="Exercise Name" TextColor="White" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"   BackgroundColor="#4388CC" Margin="15,30,5,15"/>
        <Label Text="Intensity"  FontSize="15" FontAttributes="Bold"   TextColor="White" Grid.Row="2" Grid.Column="0" VerticalTextAlignment="Center" Margin="25,30,5,15"/>
        <Picker x:Name="IntensityPicker" SelectedIndexChanged="IntensityPicker_OnSelectedIndexChanged"  TextColor="White" Grid.Row="2" Grid.Column="1" Margin="80,15,95,5" />
        <Label Text="Duration"  FontSize="15" FontAttributes="Bold"   TextColor="White" Grid.Row="3" Grid.Column="0" VerticalTextAlignment="Center" Margin="25,30,5,15"/>
        <Picker x:Name="DurationPicker" SelectedIndexChanged="DurationPicker_OnSelectedIndexChanged" TextColor="White" Grid.Row="3" Grid.Column="1" Margin="80,15,85,5"/>
        <Label Text="Accessory" FontSize="15" FontAttributes="Bold"   TextColor="White" Grid.Row="4" Grid.Column="0"  VerticalTextAlignment="Center" Margin="25,30,5,15"/>
        <Picker x:Name="AccessoryPicker" SelectedIndexChanged="AccessoryPicker_OnSelectedIndexChanged" TextColor="White" Grid.Row="4" Grid.Column="1" Margin="80,15,85,5"/>
        <Entry Text="Short Description" TextColor="White" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"   BackgroundColor="#4388CC" Margin="15,30,5,15"/>
        <Button Text="Add Exercise" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="Gray" TextColor="White"/>
        <Button Text="Cancel" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Clicked="CancelExerciseCreateButton_Clicked" BackgroundColor="Gray" TextColor="White"/> 
       





